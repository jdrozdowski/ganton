{% extends 'base.html.twig' %}

{% block title %}{{ ' | ' ~ 'title.comment_edit' }}{% endblock %}

{% block active_workout 'navigation__link--active' %}

{% block content %}
    <header class="subpage-header">
        <h2 class="subpage-header__title subpage-header__title--small">{{ 'title.workouts'|trans }}</h2>
        <h3 class="subpage-header__title">{{ 'title.comment_edit'|trans}}</h3>
    </header>

    <hr class="hr--dark">

    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            {% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
            {{ form_start(form, { method: 'post', action: url('comment_edit', {'slug': comment.workout_id, 'id': comment.comment_id}) }) }}
                {{ form_errors(form) }}
                {{ form_widget(form) }}
                <input type="submit" value="{{ 'action.edit'|trans }}" class="btn btn-success">
            {{ form_end(form) }}

            <a href="{{ url('workout_view', {'id': comment.workout_id}) }}" class="btn btn-danger pull-right">
                <span class="glyphicon glyphicon-remove"></span> {{ 'label.cancel'|trans}}
            </a>
        </div>
    </div>
{% endblock content %}