{% extends 'base.html.twig' %}

{% block title %}{{ ' | ' ~ 'title.comment_delete' }}{% endblock %}

{% block content %}
    <header class="subpage-header">
        <h2 class="subpage-header__title subpage-header__title--small">{{ 'title.workouts'|trans }}</h2>
        <h3 class="subpage-header__title">{{ 'title.comment_add'|trans}}</h3>
    </header>

    <hr class="hr--dark">

    <p class="text-warning">{{ 'warning.comment_delete'|trans }}?</p>

    {% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
    {{ form_start(form, { method: 'post', action: url('comment_delete', {'slug': comment.workout_id, 'id': comment.comment_id}) }) }}
        {{ form_errors(form) }}
        {{ form_widget(form) }}
        <input type="submit" value="{{ 'action.delete'|trans }}" class="btn btn-success">
    {{ form_end(form) }}

    <a href="{{ url('workout_view', {'id': comment.workout_id}) }}" class="btn btn-danger pull-right">
        <span class="glyphicon glyphicon-remove"></span> {{ 'label.cancel'|trans}}
    </a>
{% endblock %}